<aura:component
implements="force:appHostable,force:hasRecordId,force:hasSObjectName,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction">
<div class="slds-grid slds-scrollable_y">
    <div class="slds-col slds-size_1-of-1 searchCard">
        <div class="row p20 searchCard">
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size_1-of-1 slds-medium-size_9-of-12">
                    <lightning:input aura:id="txtBuscar" class="mb20" maxlenght="255" label="Número do Documento"
                                     name="tel"  pattern="^([0-9]{2}[\.]?[0-9]{3}[\.]?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\.]?[0-9]{3}[\.]?[0-9]{3}[-]?[0-9]{2})$"
                                     messageWhenPatternMismatch="O número de documento não é válido"
                                     />
                </div>
                <div class="slds-col slds-size_1-of-1 slds-medium-size_3-of-12 slds-text-align_right">
                    <lightning:button type="submit" class="top22" variant="brand" label="Buscar" title="Buscar"/>
                </div>
            </div>
        </div>
    </div>
</div>
</aura:component>